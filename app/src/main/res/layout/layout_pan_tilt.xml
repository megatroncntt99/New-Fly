<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="156dp"
    android:layout_height="156dp"
    android:layout_gravity="center"
    android:clipToPadding="true"
    app:cardBackgroundColor="@color/red"
    app:cardCornerRadius="100dp"
    app:cardElevation="0dp">

    <com.vannv.train.newsfly.presentation.widget.CircleBorderUp
        android:id="@+id/circle_border_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_up"
        app:layout_constraintEnd_toEndOf="@id/circle_border_up"
        app:layout_constraintStart_toStartOf="@id/circle_border_up"
        app:layout_constraintTop_toTopOf="@id/circle_border_up" />

    <com.vannv.train.newsfly.presentation.widget.CircleBorderDown
        android:id="@+id/circle_border_down"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_down"
        app:layout_constraintBottom_toBottomOf="@id/circle_border_down"
        app:layout_constraintEnd_toEndOf="@id/circle_border_down"
        app:layout_constraintStart_toStartOf="@id/circle_border_down" />

    <com.vannv.train.newsfly.presentation.widget.CircleBorderLeft
        android:id="@+id/circle_border_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_left"
        app:layout_constraintBottom_toBottomOf="@id/circle_border_left"
        app:layout_constraintStart_toStartOf="@id/circle_border_left"
        app:layout_constraintTop_toTopOf="@id/circle_border_left" />

    <com.vannv.train.newsfly.presentation.widget.CircleBorderRight
        android:id="@+id/circle_border_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_right"
        app:layout_constraintBottom_toBottomOf="@id/circle_border_right"
        app:layout_constraintEnd_toEndOf="@id/circle_border_right"
        app:layout_constraintTop_toTopOf="@id/circle_border_right" />


    <com.vannv.train.newsfly.presentation.widget.JoystickView
        android:id="@+id/joy_stick_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:JV_buttonColor="@color/chipSelect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>