<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.vannv.train.newsfly.presentation.widget.PulsatorLayout
            android:id="@+id/view_pulsator"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pulse_color="@color/borderCircleInActive"
            app:pulse_count="4"
            app:pulse_duration="700"
            app:pulse_interpolator="Decelerate"
            app:pulse_repeat="0"
            app:pulse_startFromScratch="false" />

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_mic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="@color/borderCircleActive"
            app:cardCornerRadius="60dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@id/view_pulsator"
            app:layout_constraintEnd_toEndOf="@id/view_pulsator"
            app:layout_constraintStart_toStartOf="@id/view_pulsator"
            app:layout_constraintTop_toTopOf="@id/view_pulsator">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_mic" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


